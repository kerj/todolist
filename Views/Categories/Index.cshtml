@using ToDoList.Models;

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Categories</h1>
    @if (@Model.Count == 0)
    {
      <h3>No categories have been added yet!</h3>
    }
    @foreach (var category in Model)
    {
      <h3><a href='/categories/@category.Id'>@category.Name</a></h3>
    }

    <p><a href='/'>Back Home</a></p>
  </body>
</html>
